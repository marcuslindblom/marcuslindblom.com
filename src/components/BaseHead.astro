---
import "../styles/global.css";
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const url = canonicalUrl.href;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<title>Marcus Lindblom</title>

<!-- Inter Font: https://rsms.me/inter/ -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<link rel="icon" href="/favicons/favicon.svg" type="image/svg+xml">
<link rel="webmention" href="https://webmention.io/marcuslindblom.com/webmention" />
<link rel="pingback" href="https://webmention.io/marcuslindblom.com/xmlrpc" />
<link href="https://github.com/marcuslindblom" rel="me">
<link rel="alternate" type="application/rss+xml" title="RSS Feed for Marcus Lindblom" href="/feed.xml" />
<link rel="canonical" href={url} />
<!-- <link rel="manifest" href="/favicons/site.webmanifest" /> -->
<!-- <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#1b1d20" /> -->
<!-- <meta name="msapplication-TileColor" content="#1b1d20" /> -->
<meta name="theme-color" content="#222222" />
<meta name="author" content="Marcus Lindblom" />
<meta name="description" content="Crafting software that makes people happy">
  <!-- Facebook Meta Tags -->
  <meta property="og:url" content={url}>
  <meta property="og:type" content="website">
  <meta property="og:title" content="Marcus Lindblom">
  <meta property="og:description" content="Crafting software that makes people happy">
  <meta property="og:image" content="https://marcuslindblom.com/card.png">

  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta property="twitter:domain" content="marcuslindblom.com">
  <meta property="twitter:url" content={url}>
  <meta name="twitter:title" content="Marcus Lindblom">
  <meta name="twitter:description" content="Crafting software that makes people happy">
  <meta name="twitter:image" content="https://marcuslindblom.com/card.png">